{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
